.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  background-color: #f1f1f1;
}
.top-head {
  height: 130rpx;
  width: 100%;
  background-color: #272a3b;
  color: #82b41f;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.top-head .badge {
  position: absolute;
  right: 50rpx;
}
/* swiper */
.uni-margin-wrap {
  width: 690rpx;
  width: 100%;
}
.swiper {
  height: 300rpx;
}
.swiper-item {
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}
.swiper-list {
  margin-top: 40rpx;
  margin-bottom: 0;
}
.uni-common-mt {
  margin-top: 60rpx;
  position: relative;
}
.info {
  position: absolute;
  right: 20rpx;
}
.uni-padding-wrap {
  width: 550rpx;
  padding: 0 100rpx;
}
.uni-bg-red {
  background: #fdb025;
}
.uni-bg-green {
  background: #8c8cfe;
}
.uni-bg-blue {
  background: #4f8bff;
}
.uni-bg-skyblue {
  background: skyblue;
}
.uni-bg-pink {
  background: pink;
}
.row-list {
  height: 200rpx;
  width: 100%;
  background-color: #272a3b;
}
.row {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.row-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.row-item image {
  width: 100rpx;
  height: 100rpx;
}
.row-item ._span {
  color: #a1a4ad;
}
.part-box {
  padding-bottom: 200rpx;
}
.part {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  border-top: 1px solid #efefef;
  background: #fff;
}
.part-item {
  width: 25%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #efefef;
  border-right: 1px solid #efefef;
}
.part-item:nth-child(4), .part-item:nth-child(8), .part-item:nth-child(12) {
  border-right: 0;
}
.part-item image {
  width: 100rpx;
  height: 100rpx;
}
.part-item ._span {
  color: #9e9e9e;
  margin-top: 10rpx;
}

